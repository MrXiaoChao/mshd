<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_homepae"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_homepage"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/tv_menu_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_appeal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_appeal"
            android:gravity="center"
            android:text="诉求"
            android:textColor="@drawable/tv_menu_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_progress"
            android:gravity="center"
            android:text="进度"
            android:textColor="@drawable/tv_menu_color"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_public_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_public_service"
            android:gravity="center"
            android:text="公共服务"
            android:textColor="@drawable/tv_menu_color"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_mine"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/tv_menu_color"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_div"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/ll_menu"
        android:background="@color/underline" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_div">
    </FrameLayout>
</RelativeLayout>